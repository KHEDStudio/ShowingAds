<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/video_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/left_logo_image"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/left_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/right_logo_image"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/right_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.webkit.WebView
        android:id="@+id/ticker_display"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"/>

</RelativeLayout>
