@using ShowingAds.CoreLibrary.Models.Database
@using ShowingAds.WebAssembly.Client.Components.Cards
@using Blazored.Modal.Services
@inject IModalService Modal
@implements IDisposable

<CascadingValue Value="Container">
    <div class="m-1 p-1">
        @if (_clients == null)
        {
            <p>Loading!!!</p>
        }
        else
        {
            @foreach (var client in _clients)
            {
                <AddOrderCard @key="client" Client="client" OnAddClient="AddClient" />
            }
        }
    </div>
</CascadingValue>

@code {
    [Parameter]
    public AppContainer Container { get; set; }
    [Parameter]
    public Channel Channel { get; set; }

    private IEnumerable<ClientChannel> _clients { get; set; }

    protected override Task OnInitializedAsync()
    {
        OnUpdate();
        Container.ChannelUpdated += OnUpdate;
        return base.OnInitializedAsync();
    }

    private async void OnUpdate()
    {
        _clients = await Container.ClientChannelManager.GetCollection(x => x.ChannelId == Channel.Id);
        _clients = _clients.OrderBy(x => x.Id);
        await InvokeAsync(() => StateHasChanged());
    }

    public void Dispose()
    {
        Container.ChannelUpdated -= OnUpdate;
    }

    private async void AddClient(ClientChannel client)
    {
        var order = new Order(Guid.NewGuid(), DateTime.Now, Channel.Id, client.Id);
        await Container.OrderManager.TryAddOrUpdate(order.Id, order);
    }
}
